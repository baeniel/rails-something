<%= form_for item, class: "form-input" do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>
  <%= f.label :description %>
  <%= f.text_field :description, class: "form-control" %>
  <%= f.label :image %>
  <%= f.file_field :image, class: "form-control" %>
  <%= f.submit "등록" %>
<% end %>
