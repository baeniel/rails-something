<div class="container">

  <% if current_user %>
    <%= link_to "로그아웃", destroy_user_session_path, method: :delete %>
  <% else %>
    <%= link_to "회원가입", new_user_registration_path %>
    <%= link_to "로그인", new_user_session_path %>
  <% end %>

  <%= form_tag(items_path, class: "form-inline my-2 my-lg-0", remote: true, method: :get) do %>
     <input class="form-control mr-sm-2" name="keyword" type="search" placeholder="Search" aria-label="Search">
     <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
  <% end %>
  <div class="row mt-5 mb-3" id="search_result">
    <%= render 'items/search', items: @items %>
  </div>
  <%= link_to "상품 등록", new_item_path %>
  <br>
</div>
